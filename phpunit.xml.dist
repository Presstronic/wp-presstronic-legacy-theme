<?xml version="1.0"?>
<phpunit
  bootstrap="tests/bootstrap.php"
  colors="true"
  backupGlobals="false"
  verbose="true"
>
  <testsuites>
    <testsuite name="Theme Tests">
      <directory prefix="test-" suffix=".php">./tests</directory>
    </testsuite>
  </testsuites>
  <php>
    <env name="WP_TESTS_DIR" value="/tmp/wordpress-tests-lib" />
  </php>
</phpunit>
